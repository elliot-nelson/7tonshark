<% if (index) { %>
    <% if (post.link) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><h3><%= post.title %></h3></a>
    <% } else if (post.title) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><h3><%= post.title %></h3></a>
    <% } else { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><h3>Untitled</h3></a>
    <% } %>
<% } else { %>
    <h1 class="<%= class_name %>" itemprop="name headline">
        <%= post.title %>
    </h1>
<% } %>
